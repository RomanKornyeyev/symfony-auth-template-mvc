{% extends 'email/base.html.twig' %}

{% block cuerpo_email %}
    {# Titulo #}
    {% include 'email/partials/_bloque_titulo.html.twig' with { titulo: 'Contraseña modificada' } %}

    {# Texto #}
    {% include 'email/partials/_bloque_texto.html.twig' with {
        texto: 'Hola <strong>' ~ name ~ '</strong>, tu contraseña ha sido modificada.
        Si no fuiste tú quien realizó este cambio, te recomendamos solicitar un reestablecimiento de contraseña:'
    } %}

    {# Botones #}
    {% include 'email/partials/_bloque_botones.html.twig' with {
        botones: [
            {
                partial: 'email/partials/_boton_primary.html.twig',
                params: {
                    href: resetPasswordUrl,
                    texto: 'Solicitar reestablecimiento de contraseña', 
                }
            }
        ]
    } %}

    {# Texto #}
    {% include 'email/partials/_bloque_texto.html.twig' with { texto: '
        Si no visualiza el botón directamente, por favor, copie y pegue el enlace proporcionado debajo:
    ' } %}

    {# Texto #}
    {% include 'email/partials/_bloque_texto.html.twig' with { texto: resetPasswordUrl } %}

    {# Texto #}
    {% include 'email/partials/_bloque_texto.html.twig' with {
        texto: 'Si fuiste tu, ignora este correo. No se requiere ninguna acción adicional.'
    } %}
{% endblock %}