{% extends 'base.html.twig' %}

{% block title %}Cambiar contraseña{% endblock %}

{% block content %}
	<div class="d-flex justify-content-center align-items-center h-100">
		<div class="form-wrapper">
			<h1 class="text-center mb-3">Cambiar contraseña</h1>
            <p class="text-center mb-3">Todas las sesiones activas se cerrarán al cambiar la contraseña.</p>

			{{ form_start(form, { 'attr': { 'class': 'p-4 p-md-5 border rounded-3 bg-body-tertiary' } }) }}

                <div class="form-floating mb-3">
                    {{ form_row(form.currentPassword) }}
                </div>

                <div class="mb-2 text-center">
                    <hr class="w-75 d-inline-block">
                </div>

                <div class="form-floating mb-3">
                    {{ form_row(form.newPassword.first) }}
                    <div class="form-text">
                        <ul>
                            <li>Mínimo 6 caracteres, máximo 16</li>
                            <li>No puede ser la misma que la actual</li>
                        </ul>
                    </div>
                </div>

                <div class="form-floating mb-3">
                    {{ form_row(form.newPassword.second) }}
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <a href="{{ path('app_account_index') }}" class="btn btn-outline-primary">Cancelar</a>
                </div>

                {# <div class="d-flex align-items-center my-3">
                    <hr class="flex-grow-1">
                    <span class="px-2 text-muted">O</span>
                    <hr class="flex-grow-1">
                </div>

                <div class="d-flex justify-content-center">
                    <a class="btn btn-outline-primary" href="{{ path('app_forgot_password') }}">Recuperar contraseña</a>
                </div> #}
			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}
