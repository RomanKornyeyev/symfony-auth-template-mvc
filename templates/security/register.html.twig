{% extends 'base.html.twig' %}

{% block content %}

    <div class="d-flex justify-content-center align-items-center h-100">
        
        <div class="form-wrapper">   
            <h1 class="text-center mb-3">Registro</h1>     

            {{ form_start(form, { 'attr': { 'class': 'p-4 p-md-5 border rounded-3 bg-body-tertiary' } }) }}
            
                {# CSRF #}
                {{ form_row(form._csrf_token) }}

                {# NAME #}
                <div class="form-floating mb-3">
                    {{form_row(form.name) }}
                </div>

                {# EMAIL #}
                <div class="form-floating mb-3">
                    {{form_row(form.email) }}
                </div>

                {# PASSWORD #}
                <div class="form-floating mb-3">
                    {{form_row(form.password) }}
                </div>

                {# SUBMIT #}
                <div class="mb-3">
                    {{ form_row(form.registrarse, { 'attr': { 'class': 'w-100 btn btn-lg btn-primary' } }) }}
                </div>

                <hr class="my-4">

                {# EXTRA OPTIONS #}
                <small class="text-muted text-center d-block">
                    ¿Tienes cuenta? <a href="{{ path('app_login') }}">Login</a>
                    <br>
                    ¿Olvidaste tu contraseña? <a href="{{ path('app_forgot_password') }}">Recuperación</a>
                </small>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}



